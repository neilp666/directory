<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :company %>
    <%= f.input :location %>
    <%= f.input :discription %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
